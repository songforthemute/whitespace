---
import Layout from "@/layouts/Layout.astro";
import { formatDate } from "@/lib/format";
import { getPostsByType, getPublishedDate, loadPublishedDates, sortByDate } from "@/lib/posts";

const publishedDates = loadPublishedDates();
const posts = sortByDate(getPostsByType("notebook"), publishedDates);
---

<Layout title="Notebooks" description="Learning notes" showSearch>
	<h1>Notebooks</h1>

	{posts.length === 0 ? (
		<p>No posts yet.</p>
	) : (
		<ul class="notebook-list">
			{posts.map((post) => {
				const date = getPublishedDate(post, publishedDates);
				return (
					<li>
						<time datetime={date}>{formatDate(date)}</time>
						<a href={`/notebook/${post.slug}`}>{post.title}</a>
					</li>
				);
			})}
		</ul>
	)}
</Layout>

<style>
	h1 {
		margin-bottom: 2rem;
	}
	.notebook-list {
		list-style: none;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	.notebook-list li {
		display: flex;
		align-items: baseline;
		gap: 1rem;
	}
	.notebook-list time {
		flex-shrink: 0;
		width: 6rem;
		color: var(--color-muted);
		font-size: var(--font-size-sm);
	}
	.notebook-list a {
		text-decoration: none;
	}
	.notebook-list a:hover {
		text-decoration: underline;
	}
</style>
